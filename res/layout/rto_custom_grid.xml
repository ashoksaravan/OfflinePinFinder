<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rto_card_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:elevation="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:elevation="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/cityRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingTop="4dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/rtoCode"
                android:textColor="@color/accentColor"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rtoCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:text="@string/NA"
                android:textIsSelectable="true" />

            <ImageButton
                android:id="@+id/options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05"
                android:background="@android:color/transparent"
                android:contentDescription="@string/options"
                android:scaleType="fitEnd"
                android:src="@drawable/button_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rtoRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingTop="4dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/city"
                android:textColor="@color/accentColor"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rCityName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:textIsSelectable="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stateRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingTop="4dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/state"
                android:textColor="@color/accentColor"
                android:textIsSelectable="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rtoStateName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:textIsSelectable="true" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>